<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frans Woord"
        android:id="@+id/txtWoord"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/txtVertaling"
        android:layout_alignStart="@+id/txtVertaling" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vertaling"
        android:id="@+id/txtVertaling"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="15dp"
        android:textSize="12dp"
        android:layout_marginStart="8dp"
        android:textStyle="normal|italic"
        android:layout_below="@+id/txtWoord"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:focusable="false"
        android:id="@+id/checkboxLike"
        android:layout_alignBottom="@+id/txtVertaling"
        android:layout_toLeftOf="@+id/imageViewShare"
        android:layout_toStartOf="@+id/imageViewShare" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="?attr/actionModeShareDrawable"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/imageViewShare"
        android:layout_alignBottom="@+id/checkboxLike"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/checkboxLike" />


</RelativeLayout>