<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="Studentnaam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_studentnaam"
            android:textAlignment="textEnd"
            android:paddingRight="10dp"
            android:textSize="10sp"
            android:textStyle="normal|bold"
            android:paddingTop="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_woord"
            tools:text="Frans woord goes here"
            android:paddingLeft="10dp"
            android:paddingBottom="1dp"
            android:textSize="16dp"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:id="@+id/post_vertaling"
            tools:text="Vertaling woord goes here"
            android:paddingBottom="0dp"
            android:paddingLeft="10dp"
            android:textStyle="normal|italic"
            android:textAlignment="viewStart" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:gravity="right">

            <TextView
                android:text="TextView"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:id="@+id/post_likes"
                android:paddingLeft="10dp"
                android:textSize="12sp"
                android:paddingBottom="5dp"
                android:layout_weight="0.76" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="?android:attr/actionModeShareDrawable"
                android:id="@+id/btnShare"
                android:layout_weight="0.08" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_thumb_up_black_24dp"
                android:id="@+id/btnLike"
                android:layout_weight="0.16" />
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>